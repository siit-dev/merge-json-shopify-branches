{
  "name": "merge-json-shopify-branches",
  "version": "1.0.15",
  "private": true,
  "description": "GitHub action to merge json files from shopify theme branches",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "build-package": "npm run build && npm run package && git add dist && git commit -a -m 'update dist'",
    "prepare": "npm run build && npm run package",
    "version": "npm run format && git add -A src && npm run build && npm run package && git add -A dist",
    "postversion": "git push --follow-tags",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siit-dev/merge-json-shopify-branches.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@shopify/cli": "3.54.0",
    "@shopify/theme": "3.54.0",
    "@shopify/cli-kit": "3.54.0",
    "@smartimpact-it/json-merge-shopify": "^1.0.25"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@typescript-eslint/parser": "5.59.11",
    "@vercel/ncc": "^0.36.1",
    "eslint": "8.43.0",
    "eslint-plugin-github": "4.8.0",
    "eslint-plugin-jest": "27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
